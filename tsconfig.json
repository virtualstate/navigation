{
    "compilerOptions": {
        "module": "esnext",
        "lib": [
            "es2018",
            "esnext",
            "dom",
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "esnext",
        "baseUrl": "./src",
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "createFragment",
        "allowJs": true,
        "paths": {
        }
    },
    "include": [
        "src/**/*"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "src/types"
    ],
    "exclude": [
        "node_modules/@opennetwork/vdom"
    ]
}
